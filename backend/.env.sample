# MySQL Docker Configuration (for docker-compose.yml)
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=blog_db
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password

# Database Configuration (for Node.js backend)
# Use 'db' when running in Docker, 'localhost' when running locally
DB_HOST=db
DB_USER=your_mysql_username
DB_PASSWORD=your_mysql_password
DB_NAME=blog_db

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
# IMPORTANT: Change this to a strong, random secret in production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-in-production

# Gemini API Key
GEMINI_API_KEY=your_actual_api_key_here

# Application Configuration
APP_NAME=Blog Management Platform
APP_VERSION=1.0.0